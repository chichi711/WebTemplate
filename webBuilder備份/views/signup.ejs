    <div class="row login-form  login-form1">
        <form class="col-lg" action="" accept-charset="utf-8" method="POST">
            <h1 class="signup" onclick="autoinput('sign up')">會員註冊</h1>


            <div class="txtb">
                <input id="uNameTextBox" onblur="checkpas3();" type="text" required>
                <span data-placeholder="姓名"></span>
            </div>
            <p class="tip3 aaa" style="color: red;">請輸入帳號</p>



            <div class="txtb">
                <input id="EmailTextBox" onblur="checkpas2();" type="email" required />
                <span data-placeholder="電子郵件"></span>
            </div>
            <p class="tip2" style="color: red;">請輸入電子郵件</p>


            <div class="txtb">
                <input id="uPwdTextBox" onblur="checkpas1();" type="password" required />
                <span data-placeholder="密碼"></span>
            </div>
            <div class="txtb">

                <input id="repassword" onChange="checkpas();" type="password" required />

                <span data-placeholder="確認密碼"></span>
            </div>
            <p class="tip" style="color: red;">密碼不一致</p>


            <div class="logbtn2">

                <button id="okButton" type="submit" class="logbtn btn">確認送出</button>
            </div>

        </form>
    </div>

    <script src="/javascripts/Xu.js/jquery-3.3.1.min.js"></script>
    <script src="/javascripts/Xu.js/popper.min.js"></script>
    <script src="/javascripts/Xu.js/bootstrap.min.js"></script>
    <script src="/javascripts/Xu.js/logn.js"></script>
    <script>
        $(".tip").hide();
        $(".tip2").hide();
        $(".tip3").hide();
        function checkpas3() {//失去焦點
            var pas4 = document.getElementById("uNameTextBox").value;
            if (pas4 == "")
                $(".tip3").show();
            else
                $(".tip3").hide();
        }
        function checkpas2() {
            var pas3 = document.getElementById("EmailTextBox").value;
            if (pas3 == "")
                $(".tip2").show();
            else
                $(".tip2").hide();
        }
        function checkpas1() {//失去焦點
            var pas1 = document.getElementById("uPwdTextBox").value;
            var pas2 = document.getElementById("repassword").value;
            if (pas1 != pas2 && pas2 != "")
                $(".tip").show();
            else
                $(".tip").hide();
        }
        function checkpas() {
            var pas1 = document.getElementById("uPwdTextBox").value;
            var pas2 = document.getElementById("repassword").value;

            if (pas1 != pas2) {
                $(".tip").show();
            } else {
                $(".tip").hide();
            }
        }

        $("#okButton").click(function () {
            var pas3 = document.getElementById("uPwdTextBox").value;
            var pas4 = document.getElementById("repassword").value;
            var pas4 = document.getElementById("uNameTextBox").value;
            var pas3 = document.getElementById("EmailTextBox").value;
            if (pas3 == "" || pas4 == "") {
                alert("請輸入資料");
                return false;
            }

            if (pas3 != pas4) {//當兩個密碼不相等時則顯示錯誤資訊
                alert("兩次輸入的密碼不一致！");
                return false;
            }


            var newItem = {
                uName: $("#uNameTextBox").val(),
                Email: $("#EmailTextBox").val(),
                uPwd: $("#uPwdTextBox").val()
            };

            $.ajax({
                type: "post",
                url: "/users/member",
                data: newItem
            })
            window.location.href = window.location.origin + '/users/member';
        })



    </script>

</body>

